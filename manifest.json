{
  "manifest_version": 2,

  "name": "You Look Great",
  "short_name": "You Look Great",
  "description": "Hides your face in google meet",
  "version": "1.0",
  "icons": {
    "16": "icons/ylg-16.png",
    "48": "icons/ylg-48.png",
    "128": "icons/ylg-128.png"
  },
  "browser_action": {
    "name": "Click to enable/disable",
    "default_icon": {
      "16": "icons/ylg-16.png",
      "48": "icons/ylg-48.png",
      "128": "icons/ylg-128.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
      {
        "matches": ["*://meet.google.com/*"],
        "css": ["ylg.css"],
        "js": ["ylg.js"]
      }
    ]
}